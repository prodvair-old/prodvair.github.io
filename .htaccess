<ifModule mod_expires.c>

# Add correct content-type for fonts
AddType application/vnd.ms-fontobject .eot
AddType application/x-font-ttf .ttf
AddType application/x-font-opentype .otf
AddType application/x-font-woff .woff
AddType image/svg+xml .svg

# Compress compressible fonts
AddOutputFilterByType DEFLATE application/x-font-ttf application/x-font-opentype image/svg+xml

ExpiresActive On
ExpiresDefault "access plus 5 seconds"

# Cache Images
ExpiresByType https://prodvair.github.io/img/x-icon "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/img/jpeg "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/img/*/jpeg "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/img/png "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/img/*/png "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/img/gif "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/img/svg+xml "access plus 2592000 seconds"

# Cache Fonts
ExpiresByType https://prodvair.github.io/application/vnd.ms-fontobject "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/application/x-font-ttf "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/application/x-font-opentype "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/application/x-font-woff "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/image/svg+xml "access plus 2592000 seconds"

# Cache other content types (Flash, CSS, JS, HTML, XML)
ExpiresByType https://prodvair.github.io/application/x-shockwave-flash "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/text/css "access plus 604800 seconds"
ExpiresByType https://prodvair.github.io/text/javascript "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/application/javascript "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/application/x-javascript "access plus 2592000 seconds"
ExpiresByType https://prodvair.github.io/text/html "access plus 600 seconds"
ExpiresByType https://prodvair.github.io/application/xhtml+xml "access plus 600 seconds"

</ifModule>

<ifModule mod_deflate.c>

AddOutputFilterByType DEFLATE text/html text/plain text/xml application/xml application/xhtml+xml text/css text/javascript application/javascript application/x-javascript

</ifModule>

<ifModule mod_headers.c>
    #кэшировать HTML и HTM файлы на один день
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "max-age=43200"
    </FilesMatch>
    #кэшировать CSS, JavaScript и текстовые файлы на одну неделю
    <FilesMatch "\.(js|css|txt)$">
        Header set Cache-Control "max-age=604800"
    </FilesMatch>
    #кэшировать флэш и изображения на месяц
    <FilesMatch "\.(flv|swf|ico|gif|jpg|jpeg|png)$">
        Header set Cache-Control "max-age=2592000"
    </FilesMatch>
    #отключить кэширование
    <FilesMatch "\.(pl|php|cgi|spl|scgi|fcgi)$">
        Header unset Cache-Control
    </FilesMatch>
</IfModule>
